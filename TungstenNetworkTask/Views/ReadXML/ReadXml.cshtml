@model ArticleCollection

@{
    ViewData["Title"] = "ReadXml view";
}
<style>
    .col {
        float: left;
        width: 30%;
        height: 300px;
        border: 2px solid #DBDBDB;
        border-radius: 5px;
        margin-bottom: 30px;
        margin-left: 30px;
    }
    .card-img-top {
        width: 70%;
        max-height: 150px;
        margin-left: auto;
        margin-right: auto;
        display: block;
    }
    .card-body {
        margin-left: 30px;
        margin-right: 30px;
    }
    .refresh-button {
        margin-bottom: 30px;
        margin-top: 30px;
        display: block;
    }
    @@media only screen and (max-width:620px) {
        /* For mobile phones: */
        .col {
            width: 100%;
        }
    }
</style>

<div class="refresh-button">
    <input type="button" class="btn btn-info" value="Refresh the feed" onclick="location.href='@Url.Action("ReadXml")'" />
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model.Collection)
        {
            <div class="col">
                <div class="card">
                    <img class="card-img-top" src="@item.ImageUrl" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Heading</h5>
                        <h6 class="card-subtitle">@item.Date</h6>
                        <h7 type="button" class="btn btn-primary">@item.Category</h7>
                    </div>
                </div>

            </div>
        }
    </div>
</div>